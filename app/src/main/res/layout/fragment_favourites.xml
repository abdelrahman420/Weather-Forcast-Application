<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favourites_screen.view.FavouritesFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab_add_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:contentDescription="Add Location"
    android:src="@drawable/baseline_add_location_alt_24"
    android:backgroundTint="#8b4e9e" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavourites"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>